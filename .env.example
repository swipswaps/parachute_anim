# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=False

# Security
# IMPORTANT: Change this to a secure random key in production
SECRET_KEY=change_this_to_a_secure_random_key_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Authentication
# IMPORTANT: Change these credentials in production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Processing Settings
DEFAULT_FPS=10
MAX_DURATION=300
SUPPORTED_EXPORT_FORMATS=.obj,.stl,.glb,.ply

# Paths (optional, defaults to user home directory)
BASE_DIR=/home/user/parachute_3d_project
FRAMES_DIR=${BASE_DIR}/frames
VIDEO_SEGMENT=${BASE_DIR}/video_segment.mp4
OUTPUT_DIR=${BASE_DIR}/meshroom_output
EXPORT_DIR=/home/user/3d_exports
AUDIT_LOG=${BASE_DIR}/audit.log

# External Binaries
MESHROOM_BIN=/usr/local/bin/meshroom_batch
